{
  "name": "app",
  "version": "0.0.0",
  "private": true,
  "packageManager": "npm@10.8.2",

  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",

    "performance": "npm run performance:login && npm run performance:dashboard",

    "performance:login": "CHROME_PATH=/snap/bin/chromium npx lighthouse http://localhost:4200/login --only-categories=performance,accessibility --budgets-path=performance/lighthouse-budget.json --chrome-flags='--headless=new --no-sandbox --disable-gpu --disable-dev-shm-usage' --output=html --output-path=performance/reports/login.html",

    "performance:dashboard": "CHROME_PATH=/snap/bin/chromium npx lighthouse http://localhost:4200/dashboard --only-categories=performance,accessibility --budgets-path=performance/lighthouse-budget.json --chrome-flags='--headless=new --no-sandbox --disable-gpu --disable-dev-shm-usage' --output=html --output-path=performance/reports/dashboard.html"
  },

  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },

  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },

  "devDependencies": {
    "@angular/build": "^21.1.1",
    "@angular/cli": "^21.1.1",
    "@angular/compiler-cli": "^21.1.0",

    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.10",

    "lighthouse": "^12.8.2",

    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
