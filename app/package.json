{
  "name": "app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --port 4200",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "e2e": "playwright test",
    "performance": "npm run performance:login && npm run performance:dashboard",
    "performance:login": "lighthouse http://localhost:4200/login --only-categories=performance,accessibility --budgets-path=performance/lighthouse-budget.json --chrome-flags='--headless --no-sandbox --disable-gpu --disable-dev-shm-usage' --output=html --output-path=performance/reports/login.html",
    "performance:dashboard": "lighthouse http://localhost:4200/dashboard --only-categories=performance,accessibility --budgets-path=performance/lighthouse-budget.json --chrome-flags='--headless --no-sandbox --disable-gpu --disable-dev-shm-usage' --output=html --output-path=performance/reports/dashboard.html"
  },
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.1.4",
    "@angular/cli": "^21.1.1",
    "@angular/compiler-cli": "^21.1.0",
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.10",
    "lighthouse": "^12.8.2",
    "typescript": "~5.9.2"
  }
}
